{
  "name": "ganache-toolbox",
  "version": "1.0.0",
  "description": "A simple CLI to interact with MyCrypto Ganache",
  "main": "dist/index.js",
  "bin": {
    "ganache-toolbox": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "MyCryptoHQ",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "yarn clean",
    "build": "webpack --config ./webpack.config.js --progress --color --display-error-details",
    "clean": "rimraf dist",
    "start": "babel-node --extensions '.ts' ./src/index.ts",
    "test": "jest",
    "lint": "eslint . --ignore-path .gitignore --ext .ts,.js"
  },
  "keywords": [
    "cli",
    "ganache-toolbox"
  ],
  "jest": {
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)(spec|test).ts"
    ]
  },
  "dependencies": {
    "arg": "4.1.3",
    "bn.js": "^5.1.3",
    "chalk": "4.1.0",
    "inquirer": "7.3.3",
    "listr": "0.14.3",
    "rxjs": "^6.1.0",
    "superagent": "^3.8.3",
    "web3": "1.3.0",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-typescript": "^7.0.0-beta.46",
    "@types/inquirer": "7.3.1",
    "@types/jest": "^22.2.3",
    "@types/listr": "0.14.2",
    "@types/node": "^10.0.4",
    "@types/superagent": "^3.5.8",
    "@types/yup": "0.29.7",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-module-resolver": "4.0.0",
    "babel-polyfill": "6.26.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.0",
    "jasmine-marbles": "^0.3.1",
    "jest": "^22.4.3",
    "prettier": "2.1.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.5",
    "tsconfig-paths-webpack-plugin": "3.3.0",
    "typescript": "^2.8.3",
    "utility-types": "3.10.0",
    "webpack": "^4.8.0",
    "webpack-cli": "^2.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
